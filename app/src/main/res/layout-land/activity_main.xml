<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="majapp.bluetoothpaint.MainActivity"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/sidePanelLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/colorAccent"
        android:layout_weight="0.1">
        <ImageButton
            android:id="@+id/drawLineButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/side_panel_button_padding"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#FFF"
            android:src="@drawable/custom_diagonal_line"
            android:onClick="drawLineButton_Click"/>
        <ImageButton
            android:id="@+id/drawRectangleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/side_panel_button_padding"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#FFF"
            android:src="@drawable/custom_rectangle"
            android:onClick="drawRectangleButton_Click"/>
        <ImageButton
            android:id="@+id/drawCircleButton"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:padding="@dimen/side_panel_button_padding"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:background="#FFF"
            android:src="@drawable/custom_circle"
            android:onClick="drawCircleButton_Click"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/canvasLinearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/colorPrimaryDark"
        android:gravity="bottom"
        android:layout_weight="0.9">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/toolsActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_margin="10dp"
            android:clickable="true"
            android:onClick="someButton_Click"
            android:src="@mipmap/ic_launcher_round"
            android:alpha="1"
            app:backgroundTint="#ffffff"/>
    </LinearLayout>
</LinearLayout>
